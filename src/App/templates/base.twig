<!DOCTYPE html>
<html lang="en" ng-app="DoctrineWorkbenchApp">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Doctrine Workbench</title>

        {% block stylesheets %}
        {% endblock %}

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        <style type="text/css"></style>
    </head>

    <body>
        <div class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ app.url_generator.generate('doctrine_workbench_index') }}">Doctrine Workbench</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="{% if app.request.get('_route') == 'doctrine_workbench_index' %}active{% endif %}">
                            <a href="{{ app.url_generator.generate('doctrine_workbench_index') }}">Index</a>
                        </li>
                        <li class="{% if app.request.get('_route') == 'doctrine_workbench_about' %}active{% endif %}">
                            <a href="{{ app.url_generator.generate('doctrine_workbench_about') }}">About</a>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container">
            {% block body %}
            {% endblock %}
        </div>
            
        <footer class="container">
            <br />
            <p class="text-right">{{ footer_data }}</p>
        </footer>

        {% block javascripts %}
        {% endblock %}  

    </body>
</html>